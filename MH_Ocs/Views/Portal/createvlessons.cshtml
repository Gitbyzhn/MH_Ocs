
@{
    ViewBag.Title = "creategroup";
    ViewBag.creategroup = "active";
    Layout = "~/Views/Shared/_Layout_portal.cshtml";
}

@model IEnumerable<MH_Ocs.Models.Modules_Property>


@{ 

    var selectKZ = "";
    var selectRU = "";
    var selectUZ = "";
    var selectKR = "";
    var selectEN = "";
    var selectTR = "";

    var inputXID = "";
    var VideoLSelect = "";

    var language = "ru";

    if (ViewBag.language != null)
    {
        language = ViewBag.language;
    }

    if (language == "ru")
    {
        VideoLSelect = "hidden";
    }
    else {
        inputXID = "disabled";
    }

    switch (language)
    {

        case "ru":
            selectRU = "selected";
            break;
        case "kz":
            selectKZ = "selected";
            break;
        case "uz":
            selectUZ = "selected";
            break;
        case "kr":
            selectKR = "selected";
            break;
        case "tr":
            selectTR = "selected";
            break;
        case "en":
            selectEN = "selected";
            break;

    }






}

<script>
    function fileCheck(obj) {
        var fileExtension = ['jpeg', 'jpg', 'png', 'gif', 'bmp'];
        if ($.inArray($(obj).val().split('.').pop().toLowerCase(), fileExtension) == -1) {
            alert("Only '.jpeg','.jpg', '.png', '.gif', '.bmp' formats are allowed.");
        }
    }
    function showImage() {
        document.getElementById('modelimage').style.display = 'none';
    }
    function PreviewImage(no) {
        var oFReader = new FileReader();

        var sizefile = document.getElementById("img" + no).files[0].size;
        if (sizefile < 5000000) {
            oFReader.readAsDataURL(document.getElementById("img" + no).files[0]);

            oFReader.onload = function (oFREvent) {
                document.getElementById("uploadPreview" + no).src = oFREvent.target.result;
            };
        }
        else {
            document.getElementById("img" + no).value = "";
            toastr["error"]("Ошибка: Изображения должен менее 4мб  ");
        }

    }
    function bass() {
        var img1 = $("#img1").val();
        var img2 = $("#img2").val();
        if (img1 == null || img1 == "") {
            $("#errorimg1").removeClass("hidden");
        }

        if(img2 == null || img2 == "") {
            $("#errorimg2").removeClass("hidden");
        }
    }

</script>


<section class="content-header">
    <h1>
        Создать Видео Урок
    </h1>
    <ol class="breadcrumb">
        <li><a href="/portal/groups"><i class="fa fa-dashboard"></i>ВИДЕО УРОКИ</a></li>
        <li><a href="/portal/creategroup">Создать Видео Урок</a></li>

    </ol>
</section>


<!-- Main content -->
<section class="content">
    <div class="row">

        <div class="col-xs-12 col-md-12 ">

            <!-- Box Comment -->
            <div class="box box-widget">


                <form method="post" enctype="multipart/form-data">
                    <div class="box-body">
                        <div class="col-xs-6 col-md-6">


                            <label for="img1" class="thumbnail">

                                <img id="uploadPreview1" class="img-responsive pad" src="~/Images/iconimg.png" alt="Photo" style="cursor: pointer;width:300px">

                            </label>

                            <input id="img1" type="file" name="img1" onchange="PreviewImage(1);" style="display: none;" required="">

                            <div class="col-xs-12 estyle hidden" id="errorimg1">Вам нужно добавить фото</div>



                        </div>


                        <div class="col-xs-6 col-md-6">


                            <label for="img2" class="thumbnail">

                                <img id="uploadPreview2" class="img-responsive pad" src="~/Images/iconimg-n.png" alt="Photo" style="cursor: pointer;width:300px">

                            </label>

                            <input id="img2" type="file" name="img2" onchange="PreviewImage(2);" style="display: none;" required="">

                            <div class="col-xs-12 estyle hidden" id="errorimg2">нужно добавить фото</div>



                        </div>


                        <div class="col-xs-12 col-md-12">

                        
                             
                            <div class="checkbox checkPublish">
                                <input data-val="true" data-val-required="Требуется поле Запомнить меня." id="publish" name="publish" type="checkbox" value="true">
                                <label for="publish">Опубликовать</label>
                            </div>


                       

                              
                            <select class="form-control" name="language" id="Select-Language" >
                                
                                <option value="kz" @selectKZ>Қазақ</option>
                                <option value="ru" @selectRU>Руский</option>
                                <option value="uz" @selectUZ>O'zbek</option>
                                <option value="kr" @selectKR>Кыргыз</option>
                                <option value="en" @selectEN>English</option>
                                <option value="tr" @selectTR>Türk</option>
                            </select>


                        


                            <div class="form-group">

                                <label for="Name">XId</label>
                                <input type="number" step="any" min="1" id="XID"  class="form-control @inputXID" name="XId" required>
                           
                            </div>



                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1">Модули</span>
                                <select type="text" class="form-control" name="ModulId" id="Select-Module" aria-describedby="basic-addon1">

                                    @foreach (var item in Model)
                                    {
                                        <option value="@item.MId">@item.Titile</option>
                                    }


                                </select>
                            </div>

                            <br />

                            <div class="input-group @VideoLSelect" id="div-Select-VideoL">
                                <span class="input-group-addon" id="basic-addon1">Видеоуроки</span>
                                <select type="text" class="form-control" id="Select-VideoL"  aria-describedby="basic-addon1">


                                    <option>Выберите видеоурок</option>

                                    @foreach (var videoLs in ViewBag.VideoLessons)
                                    {
                                        <option value="@videoLs.XId">@videoLs.Name</option>
                                    }


                                </select>
                            </div>
                     
                            <br />


                            <div class="form-group">    
                                
                                <label for="Name">Название</label>
                                <input type="text" class="form-control" name="Name" required>
                            
                            </div>



                     


                            <div class="form-group">
                                <label for="Name">Ссылка</label>
                                <input type="text" class="form-control" name="Link">
                            </div>


                         

                            <div class="form-group">
                                <label for="Name">Видео минут</label> 
                                <input type="number" class="form-control" name="minute" required>
                            </div>




                        </div>


                    </div>

                    <div class="box-footer">


                        <button type="submit" onclick="bass()" class="btn bg-olive margin"><span class="fa fa-plus"></span> Создать</button>


                    </div>

                </form>
                <!-- /.box-footer -->
            </div>

        </div>
    </div>
</section>
                      <input type="hidden" id="AddVideoMsg" value="@ViewBag.AddVideoMsg" />

<script>




    function Message() {

                                    var AddVideoMsg = $("#AddVideoMsg").val();
                                    if (AddVideoMsg == "success") {
                                        toastr["success"]("Ваш видео успешно добавлен !!!")
                                    }
                                    else if (AddVideoMsg == "error") {
                                        toastr["warning"]("При обработка видео произошла ошибка")
                                    }

                                    else if (AddVideoMsg == "warning01") {
                                        toastr["warning"]("Есть такой видео урок")
                                    }
                                    else if (AddVideoMsg == "warning02") {
                                        toastr["warning"]("Произошла ошибка при вводе XId. например 20,1 не 20.1 будеть правильно через запятой")
                                    }


                                }

    setTimeout(Message, 1000);

</script>


@section SelecModuleJS{
    
<script>

    $("#Select-Module").change(function () {

        var $module = $(this);

        var MID = $module.val();

        $.ajax({
            type: 'GET',
            url: "/portal/VideLsForModule/ru/" + MID,
            success: function (data) {

                var $SelectVideoL = $("#Select-VideoL");
                $SelectVideoL.empty();

                $SelectVideoL.append("<option>Выберите видеоурок</option>");

                $.each(data, function (index, value) {
                    $SelectVideoL.append("<option value="+value.XId+">" + value.Name + "</option>");
                });


            }
        });


    });


    $("#Select-VideoL").change(function () {

        var $Video = $(this);
        var XId = $Video.val();
        $("#XID").val(XId);

    });


    $("#Select-Language").change(function () {

        var $SLanguage = $(this);
        var language = $SLanguage.val();


        if (language == "ru")
        {
            $("#div-Select-VideoL").addClass("hidden");

            $("#XID").removeClass("disabled");
        }
        else {

            $("#div-Select-VideoL").removeClass("hidden");
            $("#XID").addClass("disabled");
        }

    });

</script>    
    
}