@model  IEnumerable<MH_Ocs.Models.Users_Certificates>
@{
    Layout = "~/Views/Shared/_LayoutLearn.cshtml";


}


<link href="~/Content/css/private/Learning.css" rel="stylesheet" />
<link href="~/Content/js/plyr/plyr.css" rel="stylesheet" />









<div class="row">




    @foreach (var certificate in Model)
    {

        if (certificate.PublicCert)
        {

          

            <div class="col-md-12 modul certificate">


                <div class="thumbnail thumbhover">
                    <div class="md-trigger" data-modal="modal-certificate_@certificate.Id">
                        <img src="@Url.Content(certificate.CertificateURL)" alt="Lights" style="width:100%;height:245px">
                        <div class="caption">

                            <a href="@Url.Content(certificate.CertificateURL)" download="">
                                Скачать <span class="fa fa-download"></span>
                            </a>

                        </div>
                    </div>
                </div>

            </div>

        }










    }



    <div class="md-overlay pyro">

        <div class="before"></div>
        <div class="after"></div>

    </div>

</div>